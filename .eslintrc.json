{
  "env": {
    "es2021": true,
    "browser": true,
    "node": true
  },
  "extends": ["airbnb-base", "eslint:recommended", "plugin:prettier/recommended", "prettier"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "no-nested-ternary": "off",
    "no-plusplus": "off",
    "no-console": "off",
    "no-promise-executor-return": "off",
    "no-await-in-loop": "off"
  }
}
